<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Addpeople">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#004c00">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/backarrow"/>

    </androidx.appcompat.widget.Toolbar>





    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Orphen Details"
        android:textColor="#000"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="70dp"
        android:textStyle="bold"/>


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/profilepic"
        android:layout_below="@+id/info"
        android:layout_marginTop="30dp"
        android:src="@drawable/icon"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profilepic"
        android:layout_centerInParent= "true"
        android:layout_marginTop="30dp">
        <TextView
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:hint="Current Location"
            android:textSize="18sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/location"
            android:background="@color/black"
            android:backgroundTint="@color/black"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"/>




        <EditText
        android:id="@+id/opname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/location"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="Orphen Name"
        android:textCursorDrawable="@color/black"
        android:backgroundTint="@color/black"/>

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/opname"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="User Name"
        android:textCursorDrawable="@color/black"
        android:backgroundTint="@color/black"/>

    <EditText
        android:id="@+id/userphn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="User Number"
        android:textCursorDrawable="@color/black"
        android:backgroundTint="@color/black"/>


    <Button
        android:id="@+id/submit"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="submit"
        android:layout_below="@id/userphn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="#21A07B"
        android:textColor="#fff"/>

    </RelativeLayout>

    </RelativeLayout>


